      "metadata": {
        "description": "Administrator password for the local admin account"
      }
    },
    "VMNameCon1": {
      "defaultValue": "MyVM1",
      "type": "string",
      "maxLength": 15,
      "metadata": {
        "description": "Name of the virtual machine to be created"
      }
    },
    "VMNameCon2": {
      "defaultValue": "MyVM2",
      "type": "string",
      "maxLength": 15,
      "metadata": {
        "description": "Name of the virtual machine to be created"
      }
    },
    "VMNameSQL1": {
        "defaultValue": "MyVM3",
