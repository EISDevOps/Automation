    "virtualMachineSizecon": {
      "type": "string",
      "defaultValue": "Standard_B2s",
      "allowedValues": [
        "Standard_B2s"
      ],
      "metadata": {
        "description": "Virtual Machine Size"
      }
    },
    "virtualMachineSizesql": {
        "type": "string",
