{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "selectedSubscriptionID": {
      "defaultValue": "fc71ccd3-7670-4dbb-b89b-a308ceaf23c0",
      "type": "securestring",
      "metadata": {
        "description": "Administrator password for the local admin account"
      }
    },
    "localvmadminusername": {
      "defaultValue": "Allscriptsadmin",
      "type": "string",
      "metadata": {
        "description": "Administrator Username for the local admin account"
      }
    },
      "localvmadminpassword": {
      "type": "securestring",
      "metadata": {
        "description": "Administrator password for the local admin account"
      }
    },
    "VMNameCon1": {
      "defaultValue": "MyVM1",
      "type": "string",
      "maxLength": 15,
      "metadata": {
        "description": "Name of the virtual machine to be created"
      }
    },
    "VMNameCon2": {
      "defaultValue": "MyVM2",
      "type": "string",
      "maxLength": 15,
      "metadata": {
        "description": "Name of the virtual machine to be created"
      }
    },
    "virtualMachineSize": {
      "type": "string",
      "defaultValue": "Standard_B2s",
      "allowedValues": [
        "Standard_B2s"
      ],
      "metadata": {
        "description": "Virtual Machine Size"
      }
    },
    "windowsOSVersion": {
        "type": "string",
        "defaultValue": "2016-Datacenter",
        "allowedValues": [      
          "2012-R2-Datacenter",
          "2016-Datacenter",
          "2019-Datacenter"      ]
    },
    "availabilitySetName": {
      "defaultValue": "MyAvailabilitySet",
      "type": "string",
      "metadata": {
        "description": "Availability Set Name where the VM will be placed"
      }
        },
      "vnetName": {
        "defaultValue": "tstvnet",  
        "type": "string",
        "metadata": {
          "description": "VNET Name"
        }
        },
      "vnetResourceGroup": {
        "defaultValue": "tst-1-net-001-rg",  
        "type": "string",
        "metadata": {
          "description": "Resource Group VNET is deployed in"
        }
      },
      "subnetname": {
        "defaultValue": "tstsubnet",
        "type": "string",
        "metadata": {
          "description": "Name of the subnet inside the VNET"
        }   
    },
    "subnetID": {
      "type": "string",
      "metadata": {
        "description": "subnet ID inside the VNET"
      }   
  },
      "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "variables": {
//  "subnet1Ref": "[concat('/Microsoft.Network/virtualNetworks/',parameters('VnetName'),'/subnets/',parameters('subnetname'))]",
//"subnet1Ref": "[concat('/subscriptions/',parameters('selectedSubscriptionID'),'/resourceGroups/',parameters('vnetResourceGroup'),'/Microsoft.Network/virtualNetworks/',parameters('VnetName'),'/subnets/',parameters('subnetname'))]",
//  "operatingSystemValues": {
//      "osversion": {
//      "PublisherValue": "MicrosoftWindowsServer",
//      "OfferValue": "WindowsServer",
//     "SkuValue": "2016-Datacenter"
//     }
//  }, 
    
}, 

  "resources": [
     {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('availabilitySetName')]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('location')]",
      "properties": {
        "platformFaultDomainCount": 2,
        "platformUpdateDomainCount": 5
      },
      "sku": {
        "name": "Aligned"
      }
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('VMNameCon1'))]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('location')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('windowsOSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('VMNameCon1'), '-disk')]",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            },
            "caching": "ReadWrite"
          }
        },
        "licenseType": "Windows_Server",
        "osProfile": {
          "computerName": "[concat(parameters('VMNameCon1'))]",
          "adminUsername": "[parameters('localvmadminusername')]",
          "windowsConfiguration": {
            "provisionVMAgent": true
          },
          "secrets": [],
          "adminPassword": "[parameters('localvmadminpassword')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('VMNameCon1'), '-nic'))]"
            }
          ]
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName'))]"
        }
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/availabilitySets/', parameters('availabilitySetName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('VMNameCon1'), '-nic'))]"
      ]
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('VMNameCon1'), '-nic')]",
      "apiVersion": "2016-03-30",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
                "subnet": {
                //"id": "/subscriptions/fc71ccd3-7670-4dbb-b89b-a308ceaf23c0/resourceGroups/tst-1-net-001-rg/providers/Microsoft.Network/virtualNetworks/tstvnet/subnets/tstsubnet"
                "id": "[parameters ('subnetId')]"
              }
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": []
        },
        "enableIPForwarding": false
      },
      "dependsOn": [
       // "[resourceId('Microsoft.Network/virtualNetworks/', parameters ('VnetName'))]"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[concat(parameters('VMNameCon2'))]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('location')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('virtualMachineSize')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "[variables('operatingSystemValues')[parameters('operatingSystem')].PublisherValue]",
            "offer": "[variables('operatingSystemValues')[parameters('operatingSystem')].OfferValue]",
            "sku": "[variables('operatingSystemValues')[parameters('operatingSystem')].SkuValue]",
            "version": "latest"
          },
          "osDisk": {
            "name": "[concat(parameters('VMNameCon2'), '-disk')]",
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "Standard_LRS"
            },
            "caching": "ReadWrite"
          }
        },
        "osProfile": {
          "computerName": "[concat(parameters('VMNameCon2'))]",
          "adminUsername": "[parameters('localvmadminusername')]",
          "windowsConfiguration": {
            "provisionVMAgent": true
          },
          "secrets": [],
          "adminPassword": "[parameters('localvmadminpassword')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('VMNameCon2'), '-nic'))]"
            }
          ]
        },
        "availabilitySet": {
          "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('availabilitySetName'))]"
        }
      },
      "dependsOn": [
        "[concat('Microsoft.Compute/availabilitySets/', parameters('availabilitySetName'))]",
        "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('VMNameCon2'), '-nic'))]"
      ]
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "name": "[concat(parameters('VMNameCon2'), '-nic')]",
      "apiVersion": "2016-03-30",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
                "subnet": {
                //  "id": "/subscriptions/fc71ccd3-7670-4dbb-b89b-a308ceaf23c0/resourceGroups/tst-1-net-001-rg/providers/Microsoft.Network/virtualNetworks/tstvnet/subnets/tstsubnet"
                //"id": "[concat('/subscriptions/',parameters('selectedSubscriptionID'),'/resourceGroups/',parameters('vnetResourceGroup'),'/providers/','/Microsoft.Network/virtualNetworks/',parameters('VnetName'),'/subnets/',parameters('subnetname'))]"
                "id": "[parameters ('subnetId')]"
              }
            }
          }
        ],
        "dnsSettings": {
          "dnsServers": []
        },
        "enableIPForwarding": false
      },
      "dependsOn": [
      //  "[resourceId('Microsoft.Network/virtualNetworks/', parameters ('VnetName'))]"
      ]
    }
  ],
  "outputs": {}
}